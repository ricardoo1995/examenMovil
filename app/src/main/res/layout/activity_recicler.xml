<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/boton_detalle"
        android:layout_width="116dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtv_nombre"
        android:layout_marginTop="-3dp"
        android:text="@string/botonDetalle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtv_nombre"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:text="Medicamento" />

    <TextView
        android:id="@+id/txtv_detalle1"
        android:layout_width="248dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtv_nombre"
        android:background="#F8BBD0"

        android:gravity="center"
        android:text="Nombre" />

    <TextView
        android:id="@+id/txtv_detalle2"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_below="@+id/txtv_detalle1"
        android:background="#FCE4EC"
        android:gravity="center"
        android:text="Cnatidad" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/boton_detalle" />

</RelativeLayout>